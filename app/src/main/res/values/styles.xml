<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/rouge</item>
        <item name="actionOverflowButtonStyle">@style/mythem</item>
    </style>

    <style name="mythem" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="android:src">@drawable/ic_baseline_more_vert_24</item>

    </style>

    <style name="RatingBar" parent="AppTheme">
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/rouge</item>
    </style>

</resources>